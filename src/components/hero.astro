---
interface Props {
  views: number;
}

const { views } = Astro.props;
---

<section class="hero">
  <h1 class="title">GitViews ðŸŸ†</h1>
  <p class="desc">Simple GitHub view counter.</p>
  <p class="views">
    <span>{views.toString().padStart(7, 0)}</span> views counted.
  </p>
  <div class="links">
    <a href="https://github.com/remvze/gitviews">(github)</a>
  </div>
</section>

<style>
  .hero {
    padding: 180px 0 90px;

    & .title {
      font-weight: 500;
      margin-bottom: 4px;
    }

    & .desc {
      color: var(--color-foreground-subtle);
    }

    & .views {
      margin-top: 4px;
      font-size: var(--font-sm);
      color: var(--color-foreground-subtler);

      & span {
        color: var(--color-foreground-subtle);
        font-family: var(--font-mono);
      }
    }

    & .links {
      margin-top: 16px;

      & a {
        font-size: var(--font-xsm);
        color: var(--color-foreground);
        font-weight: 500;
        text-decoration: none;
      }
    }
  }
</style>
